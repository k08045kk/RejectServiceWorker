{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.0",
  "default_locale": "en",
  
  "author": "toshi",
  "homepage_url": "https://www.bugbugnow.net/",
  "developer": {
    "name": "toshi",
    "url": "https://github.com/k08045kk"
  },
  "applications": {
    "gecko": {
      "id": "RejectServiceWorker@bugbugnow.net"
    }
  },
  
  "background": {
    "scripts": [
      "/js/common.js",
      "/js/background.js"
    ]
  },
  
  "options_ui": {
    "page": "/html/options.html"
  },
  
  "browser_action": {
    "default_title": "__MSG_extensionName__"
  },
  
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["/js/content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  
  "permissions": [
    "storage",
    "tabs"
  ]
}